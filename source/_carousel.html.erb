
<div id="<%= carouselControls %>" class="carousel slide" data-ride="carousel" data-interval="8000">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <%= image_tag image1, width: 200, height: 500, crop: :scale, class: class_set %>
    </div>
    <div class="carousel-item">
      <%= image_tag image2, width: 200, height: 500, crop: :scale, class: class_set %>
    </div>
    <div class="carousel-item">
      <%= image_tag image3, width: 200, height: 500, crop: :scale, class: class_set %>
    </div>
    <div class="carousel-item">
      <%= image_tag image4, width: 200, height: 500, crop: :scale, class: class_set %>
    </div>
  </div>
  <a class="carousel-control-prev" href="#<%= carouselControls %>" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#<%= carouselControls %>" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
